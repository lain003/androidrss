<div class="row-fluid">
	<div class="span1">
		<table>
			<tr>
				<td><div id="calender"></div></td>
			</tr>
		</table>
	</div>
	<div class="span8 offset2">
		<ul class="nav nav-tabs">
			<li class="active">
				<a href="#free" data-toggle="tab">無料</a>
			</li>
			<li>
				<a href="#paid" data-toggle="tab">有料</a>
			</li>
		</ul>

		<div class="tab-content">
			<div class="tab-pane active" id="free">
				<%= render 'ranking_contents' ,:rankings => @rankings_free%>
			</div>
			<div class="tab-pane" id="paid">
				<%= render 'ranking_contents' ,:rankings => @rankings_paid%>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	//<![CDATA[
	var now = new Date();

	var cal = Calendar.setup({
		cont : "calender",
		date : now,
		onSelect : updateFields,
		onTimeChange : updateFields
	});

	function updateFields(cal) {
		var date = cal.selection.get();
		if(date){
			date = Calendar.intToDate(date);
			window.location.href="<% request.path_info %>" + "?date=" + Calendar.printDate(date, "%Y/%m/%d");
		}
	};
	//]]>
</script>

